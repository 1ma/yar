    }
  },
  "autoload-dev": {
    "psr-4": {
      "YAR\\Tests\\": "tests/"
    }
  },
  "require": {
    "ext-pcntl": "*",
    "ext-secp256k1_nostr": "*",
    "amphp/log": "^2.0",
    "amphp/websocket-server": "^3.0",
    "monolog/monolog": "^3.4",
    "uma/dic": "^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.21",
    "phpunit/phpunit": "^10.2",
    "uma/secp256k1-nostr": "^0.1"
  },
  "config": {
    "sort-packages": true
  }
}
